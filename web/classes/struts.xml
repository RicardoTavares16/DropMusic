<?xml version="1.0" encoding="UTF-8"?>

<!-- The core configuration file for the framework is the default (struts.xml) file
and should reside on the classpath of the webapp (generally /WEB-INF/classes). -->

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

  <!-- devMode equals debug information and reload everything for every request -->
  <constant name="struts.devMode" value="true" />
  <constant name="struts.ui.theme" value="simple" />
  <!-- Muito importante! Permite que WebSockets sejam integrados com Struts2. -->
  <constant name="struts.action.excludePattern" value="/ws"/>
  <constant name="struts.ognl.allowStaticMethodAccess" value="true"/>

  <package name="dropmusic" extends="struts-default">
	
	<default-action-ref name="index" />
	
	<global-results>
		<result name="error">/WEB-INF/error.dropmusic.jsp</result>
	</global-results>

	<!-- all exceptions not caught by the application will lead to error.dropmusic.jsp -->
	<global-exception-mappings>
		<exception-mapping exception="java.lang.Exception" result="error" />
	</global-exception-mappings>

	<!-- 'index' action leads to the view provided by index.dropmusic.jsp -->
    <action name="index">
      <result>/index.dropmusic.jsp</result>
    </action>
	
	<!-- login action -> execute in LoginAction -> views user.dropmusic.jsp, admin.dropmusic.jsp or index.dropmusic.jsp -->
    <action name="login" class="dropmusic.action.LoginAction" method="execute">
      <result name="success user">/WEB-INF/user.jsp</result>
      <result name="success admin">/WEB-INF/admin.dropmusic.jsp</result>
      <result name="error">/index.dropmusic.jsp</result>
    </action>

